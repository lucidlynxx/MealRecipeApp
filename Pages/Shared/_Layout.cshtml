<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MealRecipeApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MealRecipeApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-dark position-sticky top-0" style="z-index: 1;">
        <nav class="navbar navbar-expand-lg mb-3">
            <div class="container">
                <a asp-area="" class="text-decoration-none" asp-page="/Index" asp-route-alphabet="A">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-journal-bookmark-fill text-light me-2" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M6 1h6v7a.5.5 0 0 1-.757.429L9 7.083 6.757 8.43A.5.5 0 0 1 6 8z"/>
                    <path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2"/>
                    <path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1z"/>
                    </svg>
                    <span class="text-light">Meal Recipe App</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/Index" asp-route-alphabet="A">Home</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/Search/Index">Search</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/Random/Index">Random</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/Category/Index">Categories</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/Ingredient/Index">Ingredients</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/Area/Index">Areas</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-dark text-muted">
        <div class="container text-light">
            &copy; 2025 Dzaky Syahrizal
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>